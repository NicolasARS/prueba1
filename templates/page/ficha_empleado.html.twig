{% extends 'base.html.twig' %}
{% block title %}Ficha Empleado{% endblock %}
{% block body %}
<h1>Ficha del empleado</h1>
    {% if empleado %}
    <ul>
        <li><strong>Empleado #{{ empleado.id}}</strong></li>
        <li><strong>Nombre: </strong>{{ empleado.nombre}}</li>
        <li><strong>Apellidos: </strong>{{ empleado.apellidos}}</li>
        <li><strong>Avatar: </strong><br>
        <img src={{ asset('/images/' ~ empleado.foto) }}/></li>
        <li><strong>Sccion: </strong>{{ empleado.seccion}}</li>
    </ul>
    {% else %}
        <p>Contacto no encontrado</p>
    {% endif %}
{% endblock %}